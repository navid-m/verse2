        });

        gridViewBtn.addEventListener('click', () => {
            postsContainer.className = 'grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4';
            gridViewBtn.className = 'flex items-center px-3 py-1.5 rounded-md text-xs font-medium transition-colors bg-gray-900 dark:bg-gray-600 text-white';
            listViewBtn.className = 'flex items-center px-3 py-1.5 rounded-md text-xs font-medium transition-colors text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200';
        });
